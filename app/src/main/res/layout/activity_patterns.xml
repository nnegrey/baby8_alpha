<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context=".PatternList">

    <android.support.v7.widget.RecyclerView android:id="@+id/patternsViewGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:choiceMode="singleChoice"/>
        <!--android:descendantFocusability="beforeDescendants" />-->

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/patternsFloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|right"
        app:fab_colorDisabled="@color/background"
        fab:fab_colorNormal="@color/colorAccent"
        fab:fab_colorPressed="@color/darkColorAccent"/>
</RelativeLayout>
