<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="edu.calpoly.nnegrey.baby8alpha">
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name=".Remote">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:label="@string/app_name" android:name=".PatternList"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:label="@string/app_name" android:name=".CreatePattern"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:label="@string/app_name" android:name=".CreatePatternCommand"/>
        <activity android:label="@string/app_name" android:name=".CreatePatternEffect"/>
    </application>

</manifest>